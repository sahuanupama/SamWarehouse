@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Home Page";
   string name = Context.Session.GetString("Name") ?? "Guest";
  int viewed = Context.Session.GetInt32("Viewed") ?? -1;
  }

<div class="w-25">
    <img id="main-page-icon" src="~/images/ShopIcon.png" alt="Shop Icon" />
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @{
        if (name.Equals("Guest"))
            {
            <h3>Welcome to shopping at SamWarehouse.</h3>
            }
        if(viewed != -1)
            {
            <h3>Please login for shopping @viewed times since loggin in.</h3>
            }
    }
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>



<!-- Button trigger modal -->
<button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
</button>

<!-- Example Modal HTML Code-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                This is an example modal. It doesn't really do anything other than popup on screen.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
